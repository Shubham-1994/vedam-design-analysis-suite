{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.herokuapp.com/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "functions": {
    "frontend/src/**/*.ts": {
      "runtime": "@vercel/node@18.x"
    }
  },
  "env": {
    "VITE_API_BASE_URL": "@api_base_url"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "@api_base_url"
    }
  }
}
